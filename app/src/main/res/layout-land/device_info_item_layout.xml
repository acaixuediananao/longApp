<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <com.google.android.material.card.MaterialCardView
        android:id="@id/device_info_item_card_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/ff1f1e2c"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@id/device_info_item_card_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/ffa2a5c3"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:text="@string/about_device"/>

        <TextView
            android:id="@id/device_info_item_card_display_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/ffa2a5c3"
            android:textSize="34dp"
            android:textStyle="bold"
            tools:text="@string/about_device"/>


    </com.google.android.material.card.MaterialCardView>

</FrameLayout>