<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.home.HomeActivity"
    tools:ignore="MissingDefaultResource">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_242"
        android:layout_height="match_parent"
        android:background="@color/color_FF1E1E2C">

        <FrameLayout
            android:id="@id/top_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_175"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="155dp"
                android:layout_height="56dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/newangle_logo"
                android:layout_gravity="center"/>
        </FrameLayout>

        <FrameLayout
            android:id="@id/thumb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_77"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/color_1C1DE087"
            android:layout_marginTop="@dimen/dp_175">
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_height="match_parent"
                android:src="@drawable/home_tab_thumb"/>
        </FrameLayout>

        <LinearLayout
            android:id="@id/nav_home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_77"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/top_icon"
            android:gravity="center_vertical">

            <ImageView
                android:id="@id/home_page_nav_home_icon"
                android:layout_width="66dp"
                android:layout_height="55dp"
                android:layout_marginStart="37dp"
                android:src="@drawable/home_nav_home_icon_nor"
                android:tag="Icon"/>
            <TextView
                android:id="@id/home_page_nav_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_page_nav_home"
                android:textSize="@dimen/dp_23"
                android:textStyle="bold"
                android:textColor="@color/color_FF838392"
                android:layout_marginStart="11dp"
                android:tag="Text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@id/nav_links"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_77"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/nav_home"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_83">

            <ImageView
                android:id="@id/home_page_nav_links_icon"
                android:layout_width="66dp"
                android:layout_height="55dp"
                android:layout_marginStart="37dp"
                android:src="@drawable/home_nav_link_icon_nor"
                android:tag="Icon"/>
            <TextView
                android:id="@id/home_page_nav_links_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_page_nav_link"
                android:textSize="@dimen/dp_23"
                android:textStyle="bold"
                android:textColor="@color/color_FF838392"
                android:layout_marginStart="11dp"
                android:tag="Text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@id/nav_music"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_77"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/nav_links"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_83">

            <ImageView
                android:id="@id/home_page_nav_music_icon"
                android:layout_width="66dp"
                android:layout_height="55dp"
                android:layout_marginStart="37dp"
                android:src="@drawable/home_nav_music_icon_nor"
                android:tag="Icon"/>
            <TextView
                android:id="@id/home_page_nav_music_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_page_nav_music"
                android:textSize="@dimen/dp_23"
                android:textStyle="bold"
                android:textColor="@color/color_FF838392"
                android:layout_marginStart="11dp"
                android:tag="Text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@id/nav_users"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_77"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/nav_music"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_83">

            <ImageView
                android:id="@id/home_page_nav_users_icon"
                android:layout_width="66dp"
                android:layout_height="55dp"
                android:layout_marginStart="37dp"
                android:src="@drawable/home_nav_users_icon_nor"
                android:tag="Icon"/>
            <TextView
                android:id="@id/home_page_nav_users_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_page_nav_users"
                android:textSize="@dimen/dp_23"
                android:textStyle="bold"
                android:textColor="@color/color_FF838392"
                android:layout_marginStart="11dp"
                android:tag="Text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@id/nav_settings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_77"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/nav_users"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_83">

            <ImageView
                android:id="@id/home_page_nav_settings_icon"
                android:layout_width="66dp"
                android:layout_height="55dp"
                android:layout_marginStart="37dp"
                android:src="@drawable/home_nav_settings_icon_nor"
                android:tag="Icon"/>
            <TextView
                android:id="@id/home_page_nav_settings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_page_nav_settings"
                android:textSize="@dimen/dp_23"
                android:textStyle="bold"
                android:textColor="@color/color_FF838392"
                android:layout_marginStart="11dp"
                android:tag="Text"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@id/home_view_pager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>


</LinearLayout>