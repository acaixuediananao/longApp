<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/user_list_item_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:fillViewport="true"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@id/user_list_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@id/user_list_item_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="@color/ff999999"/>
            </LinearLayout>

            <ImageView
                android:id="@id/user_list_item_right_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="#FFF55030"
            android:gravity="center"
            android:text="删除"
            android:textColor="#FFFFFFFF"
            android:textSize="14sp" />

    </LinearLayout>




</HorizontalScrollView>

