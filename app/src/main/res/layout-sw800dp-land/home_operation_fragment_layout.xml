<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_77"
            android:layout_marginEnd="@dimen/dp_66"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/welcome_speech"
                android:textColor="@color/color_FF35EAC6"
                android:textSize="@dimen/sp_44"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/dp_11" />

            <ImageView
                android:layout_width="@dimen/dp_124"
                android:layout_height="@dimen/dp_124"
                android:src="@drawable/gender_female"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_106"
            android:layout_marginEnd="@dimen/dp_106"
            android:layout_marginTop="@dimen/dp_17">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.0L"
                    android:textColor="@color/color_FF35EAC6"
                    android:textSize="@dimen/sp_33"
                    android:drawablePadding="@dimen/dp_15"
                    android:gravity="center_vertical"
                    app:drawableEndCompat="@drawable/water_flow_icon"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/water_flow_text"
                    android:textSize="@dimen/sp_22"
                    android:textColor="@color/color_FFF3F3F4"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22Â°C"
                    android:textColor="@color/color_FF35EAC6"
                    android:textSize="@dimen/sp_33"
                    android:drawablePadding="@dimen/dp_27"
                    android:gravity="center_vertical"
                    app:drawableEndCompat="@drawable/water_temperature_icon"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/water_temperature_text"
                    android:textSize="@dimen/sp_22"
                    android:textColor="@color/color_FFF3F3F4"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12%"
                    android:textColor="@color/color_FF35EAC6"
                    android:textSize="@dimen/sp_33"
                    android:drawablePadding="@dimen/dp_18"
                    android:gravity="center_vertical"
                    app:drawableEndCompat="@drawable/water_level_icon"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/water_level_text"
                    android:textSize="@dimen/sp_22"
                    android:textColor="@color/color_FFF3F3F4"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginEnd="@dimen/dp_15">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frequency_card_bg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/energy_card_bg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pulse_card_bg"/>
            </LinearLayout>


        </LinearLayout>
        
    </LinearLayout>
    
    <FrameLayout
        android:layout_width="@dimen/dp_449"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_29"
        android:layout_marginBottom="@dimen/dp_47"
        android:background="@drawable/color_282a3b_corner_47_shap">

        <ImageView
            android:id="@+id/change_treatment_mode_button"
            android:layout_width="@dimen/dp_101"
            android:layout_height="@dimen/dp_99"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginStart="@dimen/dp_22"
            android:src="@drawable/treatment_switcher_beauty"/>

        <ImageView
            android:layout_width="@dimen/dp_371"
            android:layout_height="@dimen/dp_841"
            android:src="@drawable/gender_female_figure"
            android:layout_gravity="center"/>
        
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_167"
            android:layout_gravity="bottom"
            android:background="@drawable/color_ffffff_opacity_6_corner_47_shap">
            
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_99"
                android:layout_marginStart="@dimen/dp_86"
                android:layout_marginEnd="@dimen/dp_86"
                android:layout_gravity="center"
                android:background="@drawable/start_button_bg">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_46"
                        android:text="Start"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/dp_21"/>
                    
                    <ImageView
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"/>
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>

</LinearLayout>